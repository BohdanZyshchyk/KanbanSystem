<Window x:Class="ClientUI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:VM="clr-namespace:ClientUI.ViewModel"
        xmlns:local="clr-namespace:ClientUI.View"
        mc:Ignorable="d"
        Title="KrabBan" Height="450" Width="800" Loaded="LoadedWind"
        Closing="Window_Closing"
        DataContext="{StaticResource avm}">
    <Grid >
        <ListBox x:Name="lvCardsList" ItemsSource="{Binding MyBoards}" >
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top"></StackPanel>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBoxItem>
                <StackPanel >
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="185*"/>
                            <ColumnDefinition Width="31*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="Name" BorderBrush="White" Margin="10,0"/>
                        <materialDesign:PopupBox HorizontalAlignment="Right"
                                                         Padding="2 0 2 0" Grid.Column="1" Width="34">
                            <StackPanel>
                                <Button Content="More" />
                                <Button Content="Options" />
                            </StackPanel>
                        </materialDesign:PopupBox>
                    </Grid>
                    <ListBox x:Name="lvCards" Background="LightGray">
                        <ListBoxItem>
                            <materialDesign:Card Background="AliceBlue"
                                             Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                                             Padding="0"
                                             Width="200">
                                <Grid Height="85">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="6*"/>
                                        <RowDefinition Height="39*"/>
                                        <RowDefinition Height="40*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="163*"/>
                                        <ColumnDefinition Width="37*"/>
                                    </Grid.ColumnDefinitions>

                                    <ListBox Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Top" x:Name="lbColors" Height="2">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="Padding" Value="0"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                        <ListBoxItem>
                                        <Ellipse Fill="Black"></Ellipse>
                                        </ListBoxItem>

                                    </ListBox>
                                    <TextBlock Grid.Column="0" Grid.Row="1"
                                       Margin="5 2"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}" Grid.ColumnSpan="2" Grid.RowSpan="2">
                                Test
                                    </TextBlock>
                                    <materialDesign:PopupBox HorizontalAlignment="Right"
                                                         Padding="2 0 2 0"
                                                         Grid.Column="1" Grid.Row="1"
                                                         Margin="0,2,2,2" Width="34" >
                                        <StackPanel>
                                            <Button Content="Add Label" />
                                            <Button Content="Options" />
                                        </StackPanel>
                                    </materialDesign:PopupBox>
                                    
                                    <ListBox x:Name="userList" Grid.Row="2" VerticalAlignment="Center">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top"></StackPanel>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="Padding" Value="0"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                        <ListBoxItem>
                                            <materialDesign:Chip  FontSize="10" Content="ZB" Margin="1 0 0 0" Width="35" Height="35" />
                                        </ListBoxItem>
                                    </ListBox>
                                </Grid>
                            </materialDesign:Card>
                        </ListBoxItem>

                    </ListBox>
                </StackPanel>
            </ListBoxItem>
        </ListBox>
    </Grid>
</Window>
