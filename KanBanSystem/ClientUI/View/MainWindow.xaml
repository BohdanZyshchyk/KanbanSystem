<Window x:Class="ClientUI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ClientUI.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="lvCardsList" >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <StackPanel>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="Name" BorderBrush="White" Margin="10,0"/>
                    <materialDesign:PopupBox HorizontalAlignment="Right"
                                                         Padding="2 0 2 0" Grid.Column="1">
                        <StackPanel>
                            <Button Content="More" />
                            <Button Content="Options" />
                        </StackPanel>
                    </materialDesign:PopupBox>
                </Grid>
                <ListView x:Name="lvCards" Background="Black">
                    <materialDesign:Card
                        Background="AliceBlue"
                        Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                        Padding="0"
                        Width="200">
                        <Grid Height="85">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="6*"/>
                                <RowDefinition Height="39*"/>
                                <RowDefinition Height="40*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="163*"/>
                                <ColumnDefinition Width="37*"/>
                            </Grid.ColumnDefinitions>
                            <ListView Grid.Row="0" Grid.ColumnSpan="2">
                                <ListViewItem>
                                    <StackPanel Orientation="Horizontal" x:Name="lvColorList" >
                                        <Rectangle Fill="Black" Height="auto" Width="5" ></Rectangle>
                                    </StackPanel>
                                </ListViewItem>
                            </ListView>
                               
                           
                            <TextBlock Grid.Column="0" Grid.Row="1"
                                       Margin="5 2"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}" Grid.ColumnSpan="2" Grid.RowSpan="3">
                                Test
                            </TextBlock>
                            <materialDesign:PopupBox HorizontalAlignment="Right"
                                                         Padding="2 0 2 0"
                                                         Grid.Column="1" Grid.Row="1"
                                                         Margin="0,2,2,2" >
                                <StackPanel>
                                    <Button Content="Add Label" />
                                    <Button Content="Options" />
                                </StackPanel>
                            </materialDesign:PopupBox>
                            <StackPanel Orientation="Horizontal" Grid.Row="2">
                                <materialDesign:Chip Padding="10" Content="ZB"/>
                                <materialDesign:Chip Padding="10" Content="ZB"/>
                                <materialDesign:Chip Padding="10" Content="ZB" Margin="0,4" Width="40"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </ListView>
            </StackPanel>
        </ListView>
    </Grid>
</Window>
