<UserControl x:Class="ClientUI.UserControls.BoardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientUI.UserControls"
             xmlns:VM="clr-namespace:ClientUI.ViewModel"
             xmlns:UC="clr-namespace:ClientUI.UserControls"
             xmlns:conv="clr-namespace:ClientUI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{StaticResource avm}"
             Background="White">
    <UserControl.Resources>
        <conv:LabelColorsConverter x:Key="lcConv"/>
        <conv:CardListsConverter x:Key="clConv"/>
        <conv:CardsConverter x:Key="cardsConv"/>
    </UserControl.Resources>
    <Grid DataContext="{Binding Path=MyBoards}">
        <StackPanel>
            <TextBlock Text="{Binding Path=Name}"/>
            <ListView DataContext="{Binding Path=CardLists}"
                                  ItemsSource="{Binding}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <UC:CardsListControl
                            CardListName="{Binding Path=Name}"
                            ListCards="{Binding Path=Cards,
                            Converter={StaticResource cardsConv}}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
